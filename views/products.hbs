<h1>Товары</h1>

{{#if products.length}}
{{#each products}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action">
        <a href="/products/{{id}}" target="_blank">Смотреть</a>
        {{#if @root.isAuth}}
          <div class="product-actions">
            {{#ifeq user_id @root.userId}}
              <a class="product-action product-edit-link" href="/products/edit/{{id}}" target="_blank" title="Редактировать">
                <i class="material-icons">edit</i>
              </a>
            {{/ifeq}}
            <form class="product-action edit-product-link" action="/cart/add" method="POST">
              <input type="hidden" name="id" value="{{id}}">
              <input type="hidden" name="_csrf" value="{{@root.csrf}}">
              <button type="submit" class="add-product-to-cart-button">
                <i class="material-icons">add_shopping_cart</i>
              </button>
            </form>
            <!--
            <a class="edit-product-link add-product-to-cart-link" href="/card/add" target="_blank" title="Добавить в корзину">
              <i class="material-icons">add_shopping_cart</i>
            </a>
            -->
          </div>     
        {{/if}}            
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Товаров нет</p>
{{/if}}